%h2 Game
.enemy
  %div{:style => "width: 125px;"}
    %h3= "Enemy's Seas"
  %table.enemy_board
    -10.times do |i|
      %tr.line_one
        -10.times do |k|
          %td.attack_area{:id => "enemy_board_#{k}_#{i}", :data_x => "#{k}", :data_y => "#{i}"}

.player
  %div{:style => "width: 125px;"}
    %h3= "Player "

  %table.player_board
    -10.times do |i|
      %tr.line_one
        -10.times do |k|
          %td.player_attack_area{:id => "player_board_#{k}_#{i}", :data_x => "#{k}", :data_y => "#{i}"}

  .ships_show{:style => "position: absolute; right: 630px; top:530px"}
    %h3 Player Ships
    %table
      %tr
        %th

        %th
      %tr
        %td
          -GameShip.where(:game_id => @game.id).order(:ship_id).each do |game_ship|
            -if game_ship.orientation == "vertical"
              =game_ship.ship.name
              %span
                .game_ships_vertical{:id => "game_ship_#{game_ship.id}",:style => "height: #{game_ship.ship.length * 30}px;", :game_id => @game.id, :orientation => "vertical"}
                  &nbsp;
        %td
          -GameShip.where(:game_id => @game.id).order(:ship_id).each do |game_ship|
            -if game_ship.orientation == "horizontal"
              =game_ship.ship.name
              %span
                .game_ships_horizontal{:id => "game_ship_#{game_ship.id}",:style => "width: #{game_ship.ship.length * 30}px;", :game_id => @game.id, :orientation => "horizontal"}
                  &nbsp;

:javascript
  $(function() {

    draw_ships_for_game();
  });